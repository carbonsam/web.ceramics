<section>
  <hgroup>
    <h1>Sign In</h1>
    <p>Sign in to your account.</p>
  </hgroup>

  <article>
    <%= form_with(url: session_path) do |f| %>

      <%= f.label("Email") %>
      <%= f.text_field(:email, autofocus: true) %>

      <%= f.label("Password") %>
      <%= f.password_field(:password) %>

      <%= f.submit %>

    <% end %>
  </article>
</section>
